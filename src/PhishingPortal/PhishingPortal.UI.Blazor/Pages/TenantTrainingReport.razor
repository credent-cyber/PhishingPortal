@page "/tenant-training-report"
@page "/tenant-training-report/{id:int}/{Label}"

@using PhishingPortal.UI.Blazor.Pages.GridButtons
@using PhishingPortal.UI.Blazor.Pages.GridComponent

<div class="row">
    <div class="col-sm-12 p-0">
        <div class="card">
            <div class="card-header" style="padding:5px 8px 0px;">
                <h5 style="color:coral; margin-top: 16px;">TrainingReport <i class="fa fa-bar-chart"></i> </h5>
                <div style="float:right">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/"><i class="fa fa-home" aria-hidden="true"></i></a></li>
                        <li class="breadcrumb-item active"><a href="training">Training</a></li>
                        <li class="breadcrumb-item active">TrainingReport</li>
                    </ol>
                </div>
            </div>
            <div class="card-body p-2 mt-n3">
                <div class="col-sm-12 p-0">
                    <div class="">
                        @if(Id != 0)
                        {
                            <TraininglogsGrid Id="Id" Label="@Label"/>
                        }
                        else
                        {
                            <TraininglogsGrid />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public string Label { get; set; }
}
