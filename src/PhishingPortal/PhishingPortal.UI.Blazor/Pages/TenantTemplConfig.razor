                                                            {
                                                                <option value="@val">@val</option>
                                                            }
                                                        </InputSelect>
                                                        <ValidationMessage For="() => model.Type" />
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label class="col-form-label col-md-4 bold-font">Is Active</label>
                                                    <div class="col-md-5">
