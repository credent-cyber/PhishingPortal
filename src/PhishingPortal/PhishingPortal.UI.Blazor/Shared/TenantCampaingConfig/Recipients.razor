@using PhishingPortal.Dto
<div class="table-container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Mobile</td>
            </tr>
        </thead>
        <tbody>

            @if (DataList?.Count == 0)
            {
                <tr><td colspan="3">No data found</td></tr>
            }
            else
            {
                foreach (var r in DataList)
                {
                    <tr>
                        <td>@r.Name</td>
                        <td>@r.Email</td>
                        <td>@r.Mobile</td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>


@code {
    [Parameter] public List<RecipientImport> DataList { get; set; }

}
