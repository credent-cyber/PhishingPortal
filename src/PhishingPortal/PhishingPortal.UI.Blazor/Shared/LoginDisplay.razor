@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using PhishingPortal.UI.Blazor.Services

@inject NavigationManager Navigation
@inject CustomStateProvider StateProvider


<div class="d-flex">
    <div class="user-info">
        <AuthorizeView>
            <Authorizing>
                <text>...</text>
            </Authorizing>
            <Authorized>
                <div class="dropdown">
                    <img height="24px" width="24px" src="img/user.png" />
                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" style="line-height:22px !important;"
                            data-bs-toggle="dropdown" aria-expanded="false">
                        @context.User.Identity.Name.Split('@')[0].ToUpper()
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        @* <li><a class="dropdown-item" href="authentication/profile">Profile</a></li>*@
                        <li><a @onclick="BeginSignOut" class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </div>
            </Authorized>
            <NotAuthorized>
                <header class="d-flex align-items-center justify-content-between mt-3" style="height: 40px;">
                    <div id="logo" class="mr-3">
                        <a href="#!" class="b-brand" style="margin-left:-40px">
                            <img src="/custom/assets/images/ps.png" alt="Credent Infotech" class="img-fluid" style="height:42px"
                                 width="200" height="40">
                        </a>
                    </div>
                    <div class="d-flex align-items-center justify-content-center">
                        <a class="btn btn-secondary btn-outline-warning mr-3" href="login">Login</a>
                        <a class="btn btn-secondary btn-outline-info mr-3" href="request_demo">Request Demo</a>
                    </div>
                </header>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

@code {


    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    private async Task BeginSignOut()
    {
        await StateProvider.Logout();
        Navigation.NavigateTo("/");
    }
}