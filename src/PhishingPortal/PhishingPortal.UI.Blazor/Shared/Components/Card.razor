<div class="card p2 m1">
    <div class="card-header p1">
        @Header
    </div>
    <div class="card-body p1">
        @Content
    </div>
    <div class="card-footer p1">
        @Footer
    </div>
</div>

@code {

    [Parameter]
    public RenderFragment Header { get; set; }
    
    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public RenderFragment Footer { get; set; }

}
