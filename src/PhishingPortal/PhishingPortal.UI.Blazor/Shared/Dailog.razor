@if (Show)
{

    <div class="dialog-container" style="width:100%; height:100vh">

        <div class="dialog" style="width:300px"> @*popup screen size*@
       
                <div class="card" style="margin:0; pading:0">
                    <div class="card-header">
                           <div class="btn-success" style="text-align:center;">
                               <h5 style="">@Title</h5>
                              <a @onclick="onClose" style="cursor:pointer; float:right; padding-right:5px;"><i class="fa fa-times-circle" aria-hidden="true"></i></a>
                           </div>
                     </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                @ChildContent
                            </div>
                        </div>
                    </div>
                </div>

          
        </div>
    </div>

}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool Show { get; set; }
    [Parameter] public string Title { get; set; }


    public void onClose()
    {
        Show = false;
    }
}