@if(show)
{
     <div class="dialog-container" style="width:100%; height:100%">

        <div class="dialog" style="width:60%;"> @*popup screen size*@
       
                <div class="card" >
                 
                  
                     <h5 class="text-white">@Title</h5>
               
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                @ChildContent
                            </div>
                        </div>
                    </div>
                </div>

          
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public bool show { get; set; }
    [Parameter] public string Title { get; set; }
   
    public void onClose()
    {
        show = false;
    }
}
