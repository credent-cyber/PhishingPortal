<div class="wrapper">
        <div class="logo">
            <img src="https://www.freepnglogos.com/uploads/hacker-png/stop-the-hacker-21.png" alt="">
        </div>
        <div class="text-center mt-4 name">
            Phishsims LogIn
        </div>
        <form class="p-4 mt-4" id="account" method="post">
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                  <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="false" />
            </div>
                    <span asp-validation-for="Input.Email" class="text-danger" style="font-size:12px"></span>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                   <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="false" />
            </div>
                    <span asp-validation-for="Input.Password" class="text-danger" style="font-size:12px"></span>
            <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
            <button class="btn mt-3" id="login-submit" type="submit">Login</button>
        </form>
        <div class="text-center fs-6">
            <a id="forgot-password" asp-page="./ForgotPassword">Forget password?</a> @*or <a href="#">Sign up</a>*@
        </div>
    </div>

