@page
@model ForgotPasswordModel
@*@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>*@

<style>
    .center {
  margin: 25%;
  width: 50%;
  border: 1px solid blue;
  padding: 10px;
 
}
</style>

<div class="row">
    <h5 class="col-md-4 center" >
        <section>
            <h5>
                Enter your email
            </h5>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-field d-flex align-items-center">
                    @*<label asp-for="Input.Email" class="form-label"></label>*@
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your Email" />
                    <span asp-validation-for="Input.Email" class="text-danger" style="font-size:12px"></span>
                </div>
                <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
            </form>
        </section>
 </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
